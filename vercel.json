{
  "version": 2,
  "functions": {
    "backend/server.js": {
      "maxDuration": 30
    },
    "api/index.js": {
      "maxDuration": 10
    },
    "api/test.js": {
      "maxDuration": 10
    },
    "api/health.js": {
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin/$1",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate",
        "Pragma": "no-cache",
        "Expires": "0"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "JWT_EXPIRES_IN": "7d",
    "MAX_FILE_SIZE": "10485760",
    "ALLOWED_FILE_TYPES": "image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm"
  }
}